@page "/settings"
@inject IMR_Web_app.Services.IAuthService AuthService

<PageTitle>Settings</PageTitle>

<div class="page-heading">
    <div>
        <p class="eyebrow">Administration</p>
        <h3>Settings</h3>
        <p class="muted">Manage users, roles, and portal preferences.</p>
    </div>
</div>

@if (!string.IsNullOrEmpty(status))
{
    <div class="alert alert-success">@status</div>
}
@if (!string.IsNullOrEmpty(error))
{
    <div class="alert alert-danger">@error</div>
}

<div class="settings-grid">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <div>
                <h5 class="mb-1">Roles</h5>
                <div class="text-muted small">Create roles for your organization.</div>
            </div>
        </div>
        <div class="card-body">
            <div class="d-flex gap-2 flex-wrap mb-3">
                <InputText class="form-control w-auto" placeholder="Role name" @bind-Value="newRole" />
                <button class="btn btn-primary" @onclick="AddRole">Add role</button>
            </div>
            <div class="d-flex gap-2 flex-wrap">
                @foreach (var role in AuthService.Roles)
                {
                    <span class="badge bg-secondary">@role</span>
                }
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <div>
                <h5 class="mb-1">Users</h5>
                <div class="text-muted small">Add or update accounts and assign roles.</div>
            </div>
        </div>
        <div class="card-body">
            <EditForm Model="userModel" OnValidSubmit="SaveUser">
                <DataAnnotationsValidator />
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Username</label>
                        <InputText class="form-control" @bind-Value="userModel.Username" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Display name</label>
                        <InputText class="form-control" @bind-Value="userModel.DisplayName" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Role</label>
                        <InputSelect class="form-select" @bind-Value="userModel.Role">
                            @foreach (var role in AuthService.Roles)
                            {
                                <option value="@role">@role</option>
                            }
                        </InputSelect>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Password</label>
                        <InputText type="password" class="form-control" @bind-Value="userModel.Password" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Confirm password</label>
                        <InputText type="password" class="form-control" @bind-Value="confirmPassword" />
                    </div>
                </div>
                <div class="d-flex gap-2 mt-3">
                    <button class="btn btn-primary" type="submit">Save user</button>
                    <button class="btn btn-outline-secondary" type="button" @onclick="ResetUserForm">Clear</button>
                </div>
            </EditForm>

            <div class="table-responsive mt-4">
                <table class="table align-middle">
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Display name</th>
                            <th>Role</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in AuthService.Users)
                        {
                            <tr>
                                <td>@user.Username</td>
                                <td>@user.DisplayName</td>
                                <td><span class="badge bg-light text-dark">@user.Role</span></td>
                                <td class="text-end">
                                    <button class="btn btn-sm btn-outline-primary me-2" @onclick="() => LoadUser(user)">Edit</button>
                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteUser(user.Username)" disabled="@IsCurrentUser(user.Username)">Delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-1">Portal preferences</h5>
            <div class="text-muted small">Configure branding, time zone, and notification defaults.</div>
        </div>
        <div class="card-body">
            <div class="alert alert-info">Placeholder: plug in real settings fields here.</div>
            <div class="text-muted small">For production, persist preferences to your configuration store or database.</div>
        </div>
    </div>
</div>

@code {
    private string? status;
    private string? error;
    private string? newRole;
    private UserFormModel userModel = new();
    private string? confirmPassword;

    protected override void OnInitialized()
    {
        userModel.Role = AuthService.Roles.FirstOrDefault();
    }

    private async Task AddRole()
    {
        ClearMessages();
        if (string.IsNullOrWhiteSpace(newRole))
        {
            error = "Role name is required.";
            return;
        }

        var added = await AuthService.AddRoleAsync(newRole);
        if (!added)
        {
            error = "Role already exists.";
        }
        else
        {
            status = $"Role '{newRole}' added.";
            newRole = string.Empty;
            if (string.IsNullOrWhiteSpace(userModel.Role))
            {
                userModel.Role = AuthService.Roles.FirstOrDefault();
            }
        }
    }

    private async Task SaveUser()
    {
        ClearMessages();

        if (string.IsNullOrWhiteSpace(userModel.Username) || string.IsNullOrWhiteSpace(userModel.Password))
        {
            error = "Username and password are required.";
            return;
        }

        if (userModel.Password != confirmPassword)
        {
            error = "Passwords do not match.";
            return;
        }

        if (string.IsNullOrWhiteSpace(userModel.Role))
        {
            error = "Select a role.";
            return;
        }

        var account = new IMR_Web_app.Services.UserAccount(
            userModel.Username.Trim(),
            string.IsNullOrWhiteSpace(userModel.DisplayName) ? userModel.Username.Trim() : userModel.DisplayName.Trim(),
            userModel.Role);

        var ok = await AuthService.AddOrUpdateUserAsync(account, userModel.Password);
        if (!ok)
        {
            error = "Could not save user. Ensure the role exists and fields are valid.";
            return;
        }

        status = $"User '{account.Username}' saved.";
        ResetUserForm();
    }

    private void LoadUser(IMR_Web_app.Services.UserAccount user)
    {
        ClearMessages();
        userModel.Username = user.Username;
        userModel.DisplayName = user.DisplayName;
        userModel.Role = user.Role;
        userModel.Password = string.Empty;
        confirmPassword = string.Empty;
    }

    private async Task DeleteUser(string username)
    {
        ClearMessages();
        var ok = await AuthService.DeleteUserAsync(username);
        if (!ok)
        {
            error = "Cannot delete user (either not found or currently signed in).";
            return;
        }

        status = $"User '{username}' deleted.";
        if (userModel.Username == username)
        {
            ResetUserForm();
        }
    }

    private void ResetUserForm()
    {
        userModel = new();
        confirmPassword = string.Empty;
        userModel.Role = AuthService.Roles.FirstOrDefault();
    }

    private bool IsCurrentUser(string username) =>
        !string.IsNullOrEmpty(AuthService.CurrentUserName) &&
        string.Equals(AuthService.CurrentUserName, username, StringComparison.OrdinalIgnoreCase);

    private void ClearMessages()
    {
        status = null;
        error = null;
    }

    private class UserFormModel
    {
        public string? Username { get; set; }
        public string? DisplayName { get; set; }
        public string? Role { get; set; }
        public string? Password { get; set; }
    }
}
