@page "/login"
@inject IMR_Web_app.Services.IAuthService AuthService
@inject NavigationManager NavManager

<div class="login-shell">
    <div class="login-card">
        <div class="text-center mb-3">
            <img src="/images/greengrid-logo.svg" alt="GreenGrid" class="login-logo" />
            <div class="login-brand">GreenGrid Portal</div>
            <div class="login-subtitle">Sign in to manage energy, billing, and reports</div>
        </div>

        <EditForm Model="loginModel" OnValidSubmit="OnSubmit">
            <div class="mb-3">
                <label class="form-label">Username</label>
                <InputText class="form-control" @bind-Value="loginModel.Username" placeholder="you@example.com" />
            </div>
            <div class="mb-3">
                <label class="form-label">Password</label>
                <InputText class="form-control" @bind-Value="loginModel.Password" placeholder="••••••••" type="password" />
            </div>
            @if (!string.IsNullOrEmpty(error))
            {
                <div class="text-danger mb-2">@error</div>
            }
            <button class="btn btn-primary w-100 login-button" type="submit" disabled="@isSubmitting">
                @(isSubmitting ? "Signing in..." : "Sign in")
            </button>
        </EditForm>

        <details class="demo-panel mt-3">
            <summary>Show demo credentials</summary>
            <ul>
                <li><strong>admin</strong> / Admin123 <span>(Administrative)</span></li>
                <li><strong>reader</strong> / Admin123 <span>(MeterReader)</span></li>
                <li><strong>cashier</strong> / Admin123 <span>(Cashier)</span></li>
                <li><strong>manager</strong> / Admin123 <span>(Manager)</span></li>
            </ul>
        </details>
    </div>

    @if (showTransition)
    {
        <div class="transition-overlay">
            <div class="transition-content">
                <div class="pulse-dot"></div>
                <div class="transition-text">Signing you in...</div>
            </div>
        </div>
    }
</div>

@code{
    private LoginModel loginModel = new();
    private string? error;
    private bool isSubmitting;
    private bool showTransition;

    private async Task OnSubmit()
    {
        error = null;
        isSubmitting = true;
        var ok = await AuthService.LoginAsync(loginModel.Username ?? string.Empty, loginModel.Password ?? string.Empty);
        if (ok)
        {
            showTransition = true;
            StateHasChanged();
            await Task.Delay(900);
            NavManager.NavigateTo("/greengrid", true);
        }
        else
        {
            error = "Invalid username or password.";
            isSubmitting = false;
        }
    }

    private class LoginModel { public string? Username { get; set; } public string? Password { get; set; } }
}
